<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#9999FF"

   >

    <ImageView
        android:id="@+id/ImgApp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/login"/>

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textSize="24dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/ImgApp"
        android:layout_margin="20dp"></TextView>
    <EditText
        android:id="@+id/edtUser"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:background="@drawable/rounded"
        android:layout_below="@+id/ImgApp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/tvPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pass"
        android:textSize="24dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/tvUser"
      android:layout_margin="20dp"></TextView>
    <EditText
        android:id="@+id/edtPass"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:background="@drawable/rounded"
        android:layout_below="@+id/tvUser"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        />



    <Button
        android:id="@+id/btnLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@+id/tvPass"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/rounded"


       ></Button>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"



        />


    <TextView
        android:id="@+id/tvResister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resister"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#66FF99"
        android:textStyle="bold"
        android:layout_below="@+id/login_button"></TextView>




</RelativeLayout>